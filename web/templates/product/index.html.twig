{% extends 'base.html.twig' %}

{% block title %}Importador de productos{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    {% if access_error is defined %}
    <div>
        <p>{{ access_error }}</p>
    </div>
    {% endif %}
    {% if controller_name is defined %}
    <h1>Hello Products! âœ…</h1>
    {{controller_name}}
    <ul>
        <li>Se han importado {{ new }} nuevos productos</li>
        <li>Se han actualizado {{ updated }} productos</li>
    </ul>
    {% endif %}
</div>
{% endblock %}
